extends layout

block content
  p In order to remove a link enter 'remove' as its title. There has to be at least one link.
  form(action='/links', method='post')
    table
      tr
        td
          h2 Title
        td
          h2 Target
      each link in links
        tr
          td
            input(type='text', name='titles[]', value='#{link.title}')
          td
            input(type='text', name='targets[]', value='#{link.target}')
      tr
        td
          input(type='text', name='newTitle', value='New Link')
        td
          input(type='text', name='newTarget')
    input(type='submit', value='Submit')