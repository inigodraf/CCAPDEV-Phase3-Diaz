<!DOCTYPE html>
<html>
<head>
    <title>Menu</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="home.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <a href="/home">
            <img class="logo" src="Logohome1.png" alt="Logo">
        </a>
        <div class="navigation">
            <a href="Report.html">Report</a>
            <a href="/profile">
                <img id="profilePicHeader" class="profile-pic" src="default.jpg" alt="Profile Picture">
            </a>
        </div>
    </header>

    <div class="button-container">
        <button class="button" id="button1">
            <img src="Maps.png" alt="Button 1">
        </button>
        <a href="/tickets">
            <button class="button">
                <img src="Tickets.png" alt="Button 2">
            </button>
        </a>
        <button class="button">
            <img src="Announcement.png" alt="Button 3">
        </button>
    </div>

    <div id="map-container">
        <div id="map"></div>
        <button class="close-button" id="closeButton">&times;</button>
    </div>

    <div class="container post-container">
    <div class="add-post">
        <img src="add_post.png" alt="Add Post">
    </div>
    {{#each posts}}
    <div class="post" data-post-id="{{ _Id }}">
        <div class="post-content">
            <img src="{{profilePicUrl}}" alt="Profile Picture" class="profile-pic">
            <div class="post-username">{{user.username}}</div>
            <img src="{{imageUrl}}" alt="Post Image" class="uploaded-pic">
        </div>
        <div class="post-buttons">
            <button>Like</button>
            <button class="comment-button" onclick="toggleComments(event)">Comment</button>
            <button>Share</button>
            <button onclick="deletePost(event, '{{ _Id }}')">Delete</button>
        </div>
        <div class="comment-container">
            <form class="comment-form" onsubmit="submitCommentForm(event, this)">
                <input type="text" class="comment-input" placeholder="Write a comment">
                <button type="submit" class="comment-submit-button">Submit</button>
            </form>
            <div class="comments-container">
                {{#each comments}}
                <div class="comment">{{this}}</div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>


    <div class="post-form">
    <div id="image-preview" class="preview-image"></div>
        <form id="create-post-form" action="/createpost" method="post">
            <textarea id="post-textarea" placeholder="Write your post..." rows="4"></textarea>
            <button type="button" onclick="createPost()">Create Post</button>
        </form>
    </div>

</body>
<script src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap" async defer></script>
<script src="home.js"></script>
</html>